from abc import ABC, abstractmethod 
class Animal(ABC):
    @abstractmethod 
    def sound(self): 
        pass 
        
class Dog(Animal):
    def sound(self): 
        return "Bark" 
        
dog = Dog() 
print(dog.sound())


-------------------------------
class BankAccount:
    def __init__(self,name,balance):
        self.name = name
        self.balance = balance
        
    def getbalance(self):
        return self.balance
        
class bank(BankAccount):
    def acc_type(self):
        print(self.balance,"hold a Debit card")  


b = bank("siva",100)
b.acc_type()
